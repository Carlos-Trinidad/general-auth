{
    "name": "auth-service",
    "version": "0.0.0",
    "private": true,
    "scripts": {
        "dev": "bun run --watch src/index.ts",
        "test": "bun run test:unit && bun run coverage",
        "test:unit": "bun test",
        "coverage": "bun test --coverage",
        "build": "bun build --compile --minify-whitespace --minify-syntax --target bun --outfile server ./src/index.ts && tsc",
        "docker": "cd ../.. && docker build -t mono-api -f ./apps/api/Dockerfile ."
    },
    "dependencies": {
        "@bogeychan/elysia-logger": "^0.1.10",
        "@elysiajs/cors": "^1.4.0",
        "@elysiajs/openapi": "^1.4.11",
        "@elysiajs/opentelemetry": "1.4.6",
        "elysia": "catalog:",
        "elysia-helmet": "^3.0.0",
        "pino-pretty": "^13.1.2",
        "xss": "^1.0.15"
    },
    "devDependencies": {
        "@types/bun": "^1.3.2",
        "config": "workspace:*",
        "eslint": "^9.39.1"
    }
}
